    },
    "/languages": {
      "get": {
        "summary": "Get a list of supported languages.",
        "responses": {
          "200": {
            "description": "An array of language objects.",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "code",
                  "longCode"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "a language name like 'French' or 'English (Australia)'"
                  },
                  "code": {
                    "type": "string",
                    "description": "a language code like 'en'"
                  },
                  "longCode": {
                    "type": "string",
                    "description": "a language code like 'en-US' or 'ca-ES-valencia'"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/maxtextlength": {
      "get": {
        "summary": "Get maximum text length.",
        "responses": {
          "200": {
            "description": "The maximum length of text that can be checked.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/configinfo": {
      "get": {
        "summary": "Get configuration information.",
        "parameters": [
          {
            "name": "language",
            "in": "query",
            "type": "string",
            "description": "A language code like `en-US`, `de-DE`, `fr`, etc.",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Configuration information for the specified language.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/info": {
      "get": {
        "summary": "Get software information.",
        "responses": {
          "200": {
            "description": "Information about the software.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/words": {
      "get": {
        "summary": "Get user words.",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "type": "string",
            "description": "Username",
            "required": true
          },
          {
            "name": "apiKey",
            "in": "query",
            "type": "string",
            "description": "API key",
            "required": true
          },
          {
            "name": "offset",
            "in": "query",
            "type": "integer",
            "description": "Offset for pagination",
            "required": false
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer",
            "description": "Limit for pagination",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "A list of user words.",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "/words/add": {
      "post": {
        "summary": "Add a user word.",
        "parameters": [
          {
            "name": "word",
            "in": "formData",
            "type": "string",
            "description": "Word to add",
            "required": true
          },
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "description": "Username",
            "required": true
          },
          {
            "name": "apiKey",
            "in": "formData",
            "type": "string",
            "description": "API key",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Word added successfully.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/words/delete": {
      "post": {
        "summary": "Delete a user word.",
        "parameters": [
          {
            "name": "word",
            "in": "formData",
            "type": "string",
            "description": "Word to delete",
            "required": true
          },
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "description": "Username",
            "required": true
          },
          {
            "name": "apiKey",
            "in": "formData",
            "type": "string",
            "description": "API key",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Word deleted successfully.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/rule/examples": {
      "get": {
        "summary": "Get rule examples.",
        "parameters": [
          {
            "name": "lang",
            "in": "query",
            "type": "string",
            "description": "Language code",
            "required": true
          },
          {
            "name": "ruleId",
            "in": "query",
            "type": "string",
            "description": "Rule ID",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Examples for the specified rule.",
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "/log": {
      "post": {
        "summary": "Log a message.",
        "parameters": [
          {
            "name": "message",
            "in": "formData",
            "type": "string",
            "description": "Message to log",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Message logged successfully.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    },
    "/healthcheck": {
      "get": {
        "summary": "Health check.",
        "responses": {
          "200": {
            "description": "Health check response.",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
